{
  "name": "eo-phoenix-editor",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "description": "Desktop editor for preparing EO Phoenix settings and media for the EO2 Photo Frame. Use this app to configure device settings, manage media folders, and produce settings files for the EO Phoenix Android app.",
  "author": "kiwiKodo",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"tsc -w\" \"vite\" \"wait-on http://localhost:3000 && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .\"",
    "build": "tsc && vite build",
  "make-icon": "node ./scripts/make-icon.js",
    "start": "electron .",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^26.0.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "keytar": "^7.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "publish": null,
    "files": [
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "extra/ffmpeg/",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/ffmpeg.dll"
    ],
    "asar": true,
    "icon": "src/renderer/assets/Eo2Phoenix_logo.ico",
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  }
}
